@model WebApplication.Models.Users.EditUserViewModel
@{
    ViewBag.Title = "Редактировать пользователя";
}

<div class="row mb-5">
    <div class="col-6 m-auto">
        <div class="card m-auto">
            <div class="card-header">
                <h3>Редактировать пользователя</h3>
            </div>
            <div class="card-body">
                <form method="post" autocomplete="off" asp-action="Edit" asp-controller="Users"
                      asp-route-searchSelectionString="@ViewBag.SearchSelectionString"
                      asp-route-searchString="@ViewBag.SearchString">

                    <input type="hidden" asp-for="Id" />
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="form-group col-12">
                        <label asp-for="Firstname"></label>
                        <span class="text-danger" asp-validation-for="Firstname"></span><br />
                        <input class="form-control" type="text" asp-for="Firstname" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Lastname"></label>
                        <span class="text-danger" asp-validation-for="Lastname"></span><br />
                        <input class="form-control" type="text" asp-for="Lastname" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Patronymic"></label>
                        <span class="text-danger" asp-validation-for="Patronymic"></span><br />
                        <input class="form-control" type="text" asp-for="Patronymic" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Email"></label>
                        <span class="text-danger" asp-validation-for="Email"></span><br />
                        <input class="form-control" type="text" asp-for="Email" />
                    </div><br />

                    <div class="form-group col-12">
                        <button onclick="if (!confirm('Для корректной работы, после изменения электронной почты, повторно войдите в свою учетную запись')) { return false }" type="submit" class="btn btn-primary">Редактировать</button>
                        <a asp-controller="Users" asp-action="Index" 
                           asp-route-searchSelectionString="@ViewBag.SearchSelectionString"
                           asp-route-searchString="@ViewBag.SearchString"
                           class="btn btn-warning">Назад</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div> 