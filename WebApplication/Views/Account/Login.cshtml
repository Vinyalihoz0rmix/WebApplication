@model WebApplication.Models.Account.LoginViewModel

@{ 
    ViewBag.Title = "Вход";
}

<div class="row mb-5">
    <div class="col-6 m-auto">
        <div class="card m-auto">
            <div class="card-header">
                <h3>Вход</h3>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Account" asp-action="Login"
                      asp-route-returnUrl="@Model.ReturnUrl">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="form-group col-12">
                        <label asp-for="Email"></label>
                        <span class="text-danger" asp-validation-for="Email"></span><br />
                        <input class="form-control" required asp-for="Email" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Password"></label>
                        <span class="text-danger" asp-validation-for="Password"></span><br />
                        <input class="form-control" required type="password" asp-for="Password" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="RememberMe"></label>
                        <input asp-for="RememberMe" />
                    </div><br />

                    <div class="form-group col-12">
                        <button type="submit" class="btn btn-primary">Вход</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>