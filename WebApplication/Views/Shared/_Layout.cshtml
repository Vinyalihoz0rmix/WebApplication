<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img style="width: 50px; height: 50px;" title="Food Order" alt="Food Order" src="~/files//food.ico">
            </a>
            <a class="navbar-brand" href="/">Заказ Еды</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item">
                        @if (Context.Request.Path.ToString().ToLower().Contains("provider"))
                        {
                            <a class="nav-link active" asp-controller="Provider" asp-action="Index">Поставщики</a>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Provider" asp-action="Index">Поставщики</a>
                        }
                    </li>

                    @if (User.Identity.IsAuthenticated && ((User.IsInRole("admin") || (User.IsInRole("employee")))))
                    {
                        <li class="nav-item">
                            @if (Context.Request.Path.ToString().ToLower().Contains("cart"))
                            {
                                <a class="nav-link active" asp-controller="Cart" asp-action="Index">Корзина</a>
                            }
                            else
                            {
                                <a class="nav-link" asp-controller="Cart" asp-action="Index">Корзина</a>

                            }
                        </li>

                        <li class="nav-item">
                            @if (Context.Request.Path.ToString().ToLower().Contains("order"))
                            {
                                <a class="nav-link active" asp-controller="Order" asp-action="Index">Заказ</a>
                            }
                            else
                            {
                                <a class="nav-link" asp-controller="Order" asp-action="Index">Заказ</a>
                            }
                        </li>
                    }

                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item">
                            @if (Context.Request.Path.ToString().ToLower().Contains("users"))
                            {
                                <a class="nav-link active" asp-controller="Users" asp-action="Index">Пользователь</a>
                            }
                            else
                            {
                                <a class="nav-link" asp-controller="Users" asp-action="Index">Пользователь</a>
                            }
                        </li>

                        <li class="nav-item">
                            @if (Context.Request.Path.ToString().ToLower().Contains("report"))
                            {
                                <a class="nav-link active" asp-controller="Report" asp-action="Index">Отчёт</a>
                            }
                            else
                            {
                                <a class="nav-link" asp-controller="Report" asp-action="Index">Отчёт</a>
                            }
                        </li>
                    }

                    <li class="nav-item">
                        @if (Context.Request.Path.ToString().ToLower().Contains("aboutdelivery"))
                        {
                            <a class="nav-link active" asp-controller="Home" asp-action="AboutDelivery">О доставке</a>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Home" asp-action="AboutDelivery">О доставке</a>
                        }
                    </li>

                    <li class="nav-item">
                        @if (Context.Request.Path.ToString().ToLower().Contains("about") && !Context.Request.Path.ToString().ToLower().Contains("delivery"))
                        {
                            <a class="nav-link active" asp-controller="Home" asp-action="About">О нас</a>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Home" asp-action="About">О нас</a>
                        }
                    </li>

                </ul>
                    <nav>
                        <ul class="navbar-nav mr-auto">

                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <form method="post" asp-controller="Account" asp-action="Logout">
                                        <input class="nav-link bg-dark btnLogout" type="submit" value="Выход из системы" />
                                    </form>
                                </li>
                                <li class="nav-item">
                                    @if (Context.Request.Path.ToString().ToLower().Contains("profil"))
                                    {
                                        <a class="nav-link active right" asp-controller="Account" asp-action="Profile">Профиль</a>
                                    }
                                    else
                                    {
                                        <a class="nav-link right" asp-controller="Account" asp-action="Profile">Профиль</a>
                                    }
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    @if (Context.Request.Path.ToString().ToLower().Contains("login"))
                                    {
                                        <a class="nav-link active right" asp-controller="Account" asp-action="Login">Вход</a>
                                    }
                                    else
                                    {
                                        <a class="nav-link right" asp-controller="Account" asp-action="Login">Вход</a>
                                    }
                                </li>
                                <li class="nav-item" style="float:right;">
                                    @if (Context.Request.Path.ToString().ToLower().Contains("register"))
                                    {
                                        <a class="nav-link active right" asp-controller="Account" asp-action="Register">Регистрация</a>
                                    }
                                    else
                                    {
                                        <a class="nav-link" asp-controller="Account" asp-action="Register">Регистрация</a>
                                    }
                                </li>
                            }
                        </ul>
                    </nav>
</div>
        </nav>

    </header>
    <div class="container mtByHeader">
        <main>
            @RenderBody()
        </main>
        <br />
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <a class="linkPrivacy" asp-controller="Home" asp-action="Privacy"> &copy; 2021 - Заказ Еды - Конфиденциальность</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
