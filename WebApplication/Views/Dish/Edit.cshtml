@model WebApplication.Models.Dish.EditDishViewModel

@{ ViewBag.Title = "Редактировать блюдо"; }

<div class="row mb-5">
    <div class="col-6 m-auto">
        <div class="card m-auto">
            <div class="card-header">
                <h3>Редактировать блюдо</h3>
            </div>
            <div class="card-body">
                <form method="post" asp-controller=Dish asp-action="Edit"
                      asp-route-sortDish="@ViewBag.SortDish" asp-route-menuId="@ViewBag.MenuId"
                      asp-route-searchSelectionString="@ViewBag.SearchSelectionString" asp-route-searchString="@ViewBag.SearchString"
                      enctype="multipart/form-data">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <input type="hidden" asp-for="CatalogId" />
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Path" />

                    <div class="form-group col-12 ml-3">
                        @if (Model.Path != null)
                        {
                            <img style="width: 40%; height: 20%;" class="img-thumbnail" src="@Model.Path" alt="@Model.Name" />}
                    </div>

                    <div class="form-group col-12">
                        <label for="file">Изображение</label><br />
                        <input type="file" name="uploadedFile" id="file" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Name"></label>
                        <span class="text-danger" asp-validation-for="Name"></span><br />
                        <input class="form-control" asp-for="Name" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Info"></label>
                        <span class="text-danger" asp-validation-for="Info"></span><br />
                        <textarea rows="3" class="form-control" asp-for="Info"></textarea>
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Weight"></label>
                        <span class="text-danger" asp-validation-for="Weight"></span><br />
                        <input class="form-control" asp-for="Weight" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Price"></label>
                        <span class="text-danger" asp-validation-for="Price"></span><br />
                        <input class="form-control" asp-for="Price" />
                    </div>

                    <div class="form-group col-12">
                        <button type="submit" class="btn btn-primary">Редактировать</button>
                        <a asp-action="Index" asp-route-catalogId="@Model.CatalogId"
                           asp-route-sortDish="@ViewBag.SortDish" asp-route-menuId="@ViewBag.MenuId"
                           asp-route-searchSelectionString="@ViewBag.SearchSelectionString" asp-route-searchString="@ViewBag.SearchString"
                           class="btn btn-warning">Назад</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>