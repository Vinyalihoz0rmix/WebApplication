@model WebApplication.Models.Account.ChangePasswordViewModel

@{ 
    ViewBag.Title = "Поменять пароль";
} 

@if (User.Identity.IsAuthenticated)
{
    <div class="row mb-5">
        <div class="col-6 m-auto">
            <div class="card m-auto">
                <div class="card-header">
                    <h3>Поменять пароль</h3>
                </div>
                <div class="card-body">
                    <form asp-action="ChangePassword" autocomplete="off" asp-controller="Account">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Email" />

                        <div class="form-group col-12">
                            <label asp-for="OldPassword"></label>
                            <span class="text-danger" asp-validation-for="OldPassword"></span><br />
                            <input class="form-control" type="password" asp-for="OldPassword" />
                        </div>

                        <div class="form-group col-12">
                            <label asp-for="NewPassword"></label>
                            <span class="text-danger" asp-validation-for="NewPassword" />
                            <input class="form-control" type="password" asp-for="NewPassword" />
                        </div><br />

                        <div class="form-group col-12">
                            <button type="submit" class="btn btn-primary">Изменить</button>
                            <a asp-controller="Account" asp-action="Profile" class="btn btn-warning">Назад</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
}

