@model WebApplication.Models.Account.RegisterViewModel

@{ 
    ViewBag.Title = "Регистрация";
}

<div class="row mtLogReg mb-5">
    <div class="col-6 m-auto">
        <div class="card m-auto">
            <div class="card-header">
                <h3 style="color:gold;text-align:center;">Регистрация</h3>
            </div>
            <div class="card-body">
                <form method="post" autocomplete="off" asp-controller="Account" asp-action="Register">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="form-group col-12">
                        <label asp-for="Firstname"></label>
                        <span class="text-danger" asp-validation-for="Firstname"></span><br />
                        <input type="text" class="form-control" asp-for="Firstname" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Lastname"></label>
                        <span class="text-danger" asp-validation-for="Lastname"></span><br />
                        <input type="text" class="form-control" asp-for="Lastname" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Patronymic"></label>
                        <span class="text-danger" asp-validation-for="Patronymic"></span><br />
                        <input type="text" class="form-control" asp-for="Patronymic" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Email"></label>
                        <span class="text-danger" asp-validation-for="Email"></span><br />
                        <input type="email" class="form-control" asp-for="Email" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Password"></label>
                        <span class="text-danger" asp-validation-for="Password"></span><br />
                        <input type="password" class="form-control" asp-for="Password" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="PasswordConfirm"></label>
                        <span class="text-danger" asp-validation-for="PasswordConfirm"></span><br />
                        <input type="password" class="form-control" asp-for="PasswordConfirm" />
                    </div><br />

                    <div class="form-group col-12">
                        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>