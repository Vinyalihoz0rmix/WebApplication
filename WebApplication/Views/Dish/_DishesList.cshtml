@model WebApplication.Models.Dish.DishViewModel

<div class="col-4">
    <div class="shadow-lg p-3 bg-white mb-4">
        <div class="card">

            @if (Model.Path != null)
            {
                <div class="card-img-wrapper">
                    <img title="@Model.Name" class="card-img-top" src="@Model.Path" alt="@Model.Name" />
                </div>}

            <div class="container">
                @if (Model.Name.Length >= 16)
                {
                    <h2>@Model.Name.Remove(13)...</h2> }
                else
                {
                    <h2>@Model.Name</h2>}
                @if (User.IsInRole("admin"))
                {
                    <h6> Идентификатор: @Model.Id </h6>
                }
                <h6> Информация: @Model.Info </h6>
                <h6>Вес: @Model.Weight</h6>
                <h6>Цена: <span class="text-danger">@Model.Price</span> руб.</h6>

                @if (User.IsInRole("admin"))
                {
                    if (@ViewData["MenuId"] == null)
                    {
                        <form asp-action="Delete" asp-route-id="@Model.Id" asp-route-catalogId="@Model.CatalogId" 
                              asp-route-sortDish="@ViewBag.SortDish" asp-route-menuId="@ViewBag.MenuId"
                              asp-route-searchSelectionString="@ViewBag.SearchSelectionString" asp-route-searchString="@ViewBag.SearchString"
                              method="post">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@Model.Id"
                               asp-route-searchSelectionString="@ViewBag.SearchSelectionString" asp-route-searchString="@ViewBag.SearchString">Редактировать</a>
                            <button onclick="if (!confirm('Вы уверены, что хотите удалить этот элемент?')) { return false }" type="submit" class="btn btn-sm btn-danger">
                                Удалить
                            </button>
                        </form> }
                    else
                    {
                        <input type="hidden" name="allSelect" value="@Model.Id" />
                        <label for="@Model.Id">Добавить в меню</label>
                        <input id="@Model.Id" type="checkbox" name="newAddedDishes" value="@Model.Id"
                               @(Model.AddMenu ? "checked=\"checked\"" : "") /> }
                    <br />}
            </div>
        </div>
    </div>
</div>